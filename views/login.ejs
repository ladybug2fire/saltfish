<%- contentFor('body') %>
<div class="signup-group">
    <form action="/login" method="post">
        <h1>登入</h1>
        <div class="form-group row">
            <label for="username" class="col-sm-3 col-form-label">用户名</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="username" name="username"  placeholder="用户名">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="密码">
            </div>
        </div>
        <button type="submit" class="col-sm-11 btn btn-primary">登入</button>
    </form>
</div>

<style>
.signup-group{
    display: flex;
    height: 100vh;
    width: 100vw;
    justify-content: center;
    align-items: center;
}
.signup-group h1{
    text-align: center;
    margin-bottom: 1.6rem;
}
.signup-group form{
    width: 30vw;
}
.signup-group label{
    text-align: left
}
</style>
